@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Game Results"];
}
<h2>@Localizer["Game Results"]</h2>
<h3>@ViewData["Message"]</h3>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<style>
    .fa {
        padding: 10px;
        font-size: 15px;
        width: 40px;
        text-align: center;
        text-decoration: none;
    }

    .fa-facebook {
        background: #3B5998;
        color: white;
    }

    .top10-section {
        padding-top: 1em;
    }

    .top10-table {
        padding-bottom: 1.5em;
    }
</style>

<p>
    @Localizer["Thank you for playing!"]
</p>

<p>
    @Localizer["Analysis of results will allow us to test what is the most efficient design"]
</p>

<h4>
    @Localizer["Find more information here"]:
</h4>

<ul>
    <li>
        <a href="https://evolutionofidentitysignaling.com/" target="_blank">
            @Localizer["Evolution of identity signalling in vocalizations"]
        </a><br />
        <a href="https://www.facebook.com/evolutionofidentitysignaling/" class="fa fa-facebook" target="_blank"></a>
        <a href="https://twitter.com/idsignaling" class="fa fa-twitter" target="_blank"></a>
    </li>
    <li>
        <a href="https://www.birdlife.cz/co-delame/vyzkum-a-ochrana-ptaku/ochrana-druhu/sycek-obecny/" target="_blank">
            @Localizer["Conservation of Little owls in Czech Republic"]
        </a><br />
        <a href="https://www.facebook.com/OchranaSycka/" class="fa fa-facebook" target="_blank"></a>
        <a href="https://twitter.com/birdlifecz" class="fa fa-twitter" target="_blank"></a>
    </li>
</ul>

<div class="top10-section">
    <h4>Top 10</h4>

    <div class="row">
        <div class="col-lg-6 col-sm-6 top10-table">
            <div id="leaderboard-littleowl" class="hidden">
                <div class="panel panel-default">
                    <div class="panel-heading"><b id="leaderboard-littleowl-name" class="panel-title"></b></div>
                    <div class="panel-body">
                        <p>
                            @Localizer["Mean number of turns in"] @Localizer["Little Owl"]: <span id="stats-littleowl"></span>
                        </p>
                    </div>
                    <table id="leaderboard-littleowl-table" class="table table-striped table-condensed">
                        <tr>
                            <th>@Localizer["Nickname"]</th>
                            <th width="15%">@Localizer["_Turns"]</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 top10-table">
            <div id="leaderboard-10vars" class="hidden">
                <div class="panel panel-default">
                    <div class="panel-heading"><b id="leaderboard-10vars-name" class="panel-title"></b></div>
                    <div class="panel-body">
                        <p>
                            @Localizer["Mean number of turns in"] @Localizer["Drunken UFO Owl"]: <span id="stats-10vars"></span>
                        </p>
                    </div>
                    <table id="leaderboard-10vars-table" class="table table-striped table-condensed">
                        <tr>
                            <th>@Localizer["Nickname"]</th>
                            <th width="15%">@Localizer["_Turns"]</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-sm-6 top10-table">
            <div id="leaderboard-3vars" class="hidden">
                <div class="panel panel-default">
                    <div class="panel-heading"><b id="leaderboard-3vars-name" class="panel-title"></b></div>
                    <div class="panel-body">
                        <p>
                            @Localizer["Mean number of turns in"] @Localizer["Sleepy UFO Owl"]: <span id="stats-3vars"></span>
                        </p>
                    </div>
                    <table id="leaderboard-3vars-table" class="table table-striped table-condensed">
                        <tr>
                            <th>@Localizer["Nickname"]</th>
                            <th width="15%">@Localizer["_Turns"]</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 top10-table">
            <div id="leaderboard-hs33-10vars" class="hidden">
                <div class="panel panel-default">
                    <div class="panel-heading"><b id="leaderboard-hs33-10vars-name" class="panel-title"></b></div>
                    <div class="panel-body">
                        <p>
                            @Localizer["Mean number of turns in"] @Localizer["Common UFO Owl"]: <span id="stats-hs33-10vars"></span>
                        </p>
                    </div>
                    <table id="leaderboard-hs33-10vars-table" class="table table-striped table-condensed">
                        <tr>
                            <th>@Localizer["Nickname"]</th>
                            <th width="15%">@Localizer["_Turns"]</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-sm-6 top10-table">
            <div id="leaderboard-hs33-10vars-long" class="hidden">
                <div class="panel panel-default">
                    <div class="panel-heading"><b id="leaderboard-hs33-10vars-long-name" class="panel-title"></b></div>
                    <div class="panel-body">
                        <p>
                            @Localizer["Mean number of turns in"] @Localizer["Lazy UFO Owl"]: <span id="stats-hs33-10vars-long"></span>
                        </p>
                    </div>
                    <table id="leaderboard-hs33-10vars-long-table" class="table table-striped table-condensed">
                        <tr>
                            <th>@Localizer["Nickname"]</th>
                            <th width="15%">@Localizer["_Turns"]</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    fillAllGameStatistics("#stats-littleowl", "littleowl");
    fillLeaderBoard("littleowl", "#leaderboard-littleowl");

    fillAllGameStatistics("#stats-10vars", "10vars");
    fillLeaderBoard("10vars", "#leaderboard-10vars")

    fillAllGameStatistics("#stats-3vars", "3vars");
    fillLeaderBoard("3vars", "#leaderboard-3vars");

    fillAllGameStatistics("#stats-hs33-10vars", "hs33-10vars");
    fillLeaderBoard("hs33-10vars", "#leaderboard-hs33-10vars");

    fillAllGameStatistics("#stats-hs33-10vars-long", "hs33-10vars-long");
    fillLeaderBoard("hs33-10vars-long", "#leaderboard-hs33-10vars-long");
</script>
